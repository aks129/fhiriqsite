*.ttf binary
*.otf binary
*.eot binary
*.pdf binary
*.zip binary
*.tar.gz binary
*.tgz binary
*.7z binary
*.rar binary
*.exe binary
*.dll binary
*.so binary
*.dylib binary

# Wix-specific files
*.wix text eol=lf
*.wix.js text eol=lf
*.wix.jsx text eol=lf

# Template files
*.template text eol=lf

# Configuration files
package.json text eol=lf
package-lock.json text eol=lf
yarn.lock text eol=lf
tsconfig.json text eol=lf
jsconfig.json text eol=lf
.nvmrc text eol=lf

# Docker files
Dockerfile text eol=lf
docker-compose.yml text eol=lf
docker-compose.yaml text eol=lf
.dockerignore text eol=lf

# CI/CD files
.github/workflows/*.yml text eol=lf
.github/workflows/*.yaml text eol=lf
.gitlab-ci.yml text eol=lf
.travis.yml text eol=lf
appveyor.yml text eol=lf

# Linguist vendored paths (exclude from language statistics)
vendor/** linguist-vendored
node_modules/** linguist-vendored
public/build/** linguist-vendored
dist/** linguist-vendored
build/** linguist-vendored
coverage/** linguist-vendored
test-results/** linguist-vendored
.wix/** linguist-vendored

# Linguist language detection
*.jsx linguist-language=JavaScript
*.tsx linguist-language=TypeScript
*.wix linguist-language=JavaScript
*.template linguist-language=Text

# Export-ignore (files to exclude from git archive)
.gitattributes export-ignore
.gitignore export-ignore
