{
  "collections": {
    "blogPosts": {
      "displayName": "Blog Posts",
      "fields": {
        "title": {
          "type": "text",
          "required": true,
          "maxLength": 120,
          "description": "SEO-optimized blog post title"
        },
        "slug": {
          "type": "text",
          "required": true,
          "unique": true,
          "description": "URL slug for the post"
        },
        "excerpt": {
          "type": "text",
          "maxLength": 160,
          "description": "Meta description and excerpt"
        },
        "content": {
          "type": "richText",
          "required": true,
          "description": "Main blog post content"
        },
        "author": {
          "type": "text",
          "required": true,
          "default": "Eugene Vestel"
        },
        "publishedDate": {
          "type": "date",
          "required": true
        },
        "featuredImage": {
          "type": "image",
          "description": "Hero image for the post"
        },
        "categories": {
          "type": "multiReference",
          "referenceCollection": "blogCategories"
        },
        "tags": {
          "type": "tags",
          "description": "Content tags for filtering"
        },
        "seoTitle": {
          "type": "text",
          "maxLength": 60,
          "description": "Custom SEO title if different from title"
        },
        "featured": {
          "type": "boolean",
          "default": false,
          "description": "Feature on homepage"
        },
        "readingTime": {
          "type": "number",
          "description": "Estimated reading time in minutes"
        }
      }
    },
    "blogCategories": {
      "displayName": "Blog Categories",
      "fields": {
        "name": {
          "type": "text",
          "required": true,
          "unique": true
        },
        "slug": {
          "type": "text",
          "required": true,
          "unique": true
        },
        "description": {
          "type": "text",
          "maxLength": 160
        },
        "color": {
          "type": "text",
          "description": "Hex color for category badge"
        }
      }
    },
    "podcastEpisodes": {
      "displayName": "Podcast Episodes",
      "fields": {
        "title": {
          "type": "text",
          "required": true,
          "maxLength": 120
        },
        "slug": {
          "type": "text",
          "required": true,
          "unique": true
        },
        "episodeNumber": {
          "type": "number",
          "required": true
        },
        "description": {
          "type": "text",
          "maxLength": 500,
          "description": "Episode description"
        },
        "showNotes": {
          "type": "richText",
          "description": "Detailed show notes"
        },
        "audioFile": {
          "type": "media",
          "required": true,
          "description": "Audio file for the episode"
        },
        "duration": {
          "type": "text",
          "description": "Episode duration (e.g., '45:30')"
        },
        "publishedDate": {
          "type": "date",
          "required": true
        },
        "guests": {
          "type": "multiReference",
          "referenceCollection": "podcastGuests"
        },
        "transcript": {
          "type": "richText",
          "description": "Episode transcript"
        },
        "featuredImage": {
          "type": "image",
          "description": "Episode artwork"
        },
        "tags": {
          "type": "tags"
        }
      }
    },
    "podcastGuests": {
      "displayName": "Podcast Guests",
      "fields": {
        "name": {
          "type": "text",
          "required": true
        },
        "title": {
          "type": "text",
          "description": "Professional title"
        },
        "company": {
          "type": "text",
          "description": "Company/organization"
        },
        "bio": {
          "type": "richText",
          "description": "Guest biography"
        },
        "photo": {
          "type": "image",
          "description": "Guest headshot"
        },
        "linkedin": {
          "type": "url"
        },
        "twitter": {
          "type": "url"
        },
        "website": {
          "type": "url"
        }
      }
    },
    "caseStudies": {
      "displayName": "Case Studies",
      "fields": {
        "title": {
          "type": "text",
          "required": true,
          "maxLength": 120
        },
        "slug": {
          "type": "text",
          "required": true,
          "unique": true
        },
        "clientName": {
          "type": "text",
          "required": true,
          "description": "Client or project name"
        },
        "industry": {
          "type": "text",
          "description": "Healthcare sector/industry"
        },
        "challenge": {
          "type": "richText",
          "required": true,
          "description": "Problem statement and challenges"
        },
        "solution": {
          "type": "richText",
          "required": true,
          "description": "Our approach and solution"
        },
        "results": {
          "type": "richText",
          "required": true,
          "description": "Outcomes and metrics"
        },
        "technologies": {
          "type": "tags",
          "description": "FHIR resources, standards, tools used"
        },
        "featuredImage": {
          "type": "image",
          "description": "Case study hero image"
        },
        "clientLogo": {
          "type": "image",
          "description": "Client company logo"
        },
        "testimonial": {
          "type": "richText",
          "description": "Client testimonial quote"
        },
        "projectDuration": {
          "type": "text",
          "description": "Timeline (e.g., '3 months')"
        },
        "teamSize": {
          "type": "text",
          "description": "Project team size"
        },
        "publishedDate": {
          "type": "date",
          "required": true
        },
        "featured": {
          "type": "boolean",
          "default": false
        }
      }
    },
    "tools": {
      "displayName": "Tools Catalog",
      "fields": {
        "name": {
          "type": "text",
          "required": true,
          "maxLength": 80
        },
        "slug": {
          "type": "text",
          "required": true,
          "unique": true
        },
        "tagline": {
          "type": "text",
          "maxLength": 120,
          "description": "Short description for listings"
        },
        "description": {
          "type": "richText",
          "required": true,
          "description": "Detailed tool description"
        },
        "category": {
          "type": "reference",
          "referenceCollection": "toolCategories",
          "required": true
        },
        "features": {
          "type": "richText",
          "description": "Key features and capabilities"
        },
        "pricingModel": {
          "type": "text",
          "options": ["Free", "Freemium", "Subscription", "One-time", "Enterprise"],
          "required": true
        },
        "startingPrice": {
          "type": "text",
          "description": "Starting price (e.g., '$29/month')"
        },
        "demoUrl": {
          "type": "url",
          "description": "Link to live demo"
        },
        "documentationUrl": {
          "type": "url",
          "description": "Link to documentation"
        },
        "githubUrl": {
          "type": "url",
          "description": "GitHub repository if open source"
        },
        "screenshot": {
          "type": "image",
          "description": "Tool screenshot or interface"
        },
        "logo": {
          "type": "image",
          "description": "Tool logo"
        },
        "tags": {
          "type": "tags",
          "description": "Technology tags (FHIR R4, HL7, etc.)"
        },
        "status": {
          "type": "text",
          "options": ["Active", "Beta", "Coming Soon", "Deprecated"],
          "default": "Active"
        },
        "featured": {
          "type": "boolean",
          "default": false
        }
      }
    },
    "toolCategories": {
      "displayName": "Tool Categories",
      "fields": {
        "name": {
          "type": "text",
          "required": true,
          "unique": true
        },
        "slug": {
          "type": "text",
          "required": true,
          "unique": true
        },
        "description": {
          "type": "text",
          "maxLength": 200
        },
        "icon": {
          "type": "text",
          "description": "Icon class or name"
        },
        "sortOrder": {
          "type": "number",
          "description": "Display order"
        }
      }
    },
    "testimonials": {
      "displayName": "Testimonials",
      "fields": {
        "clientName": {
          "type": "text",
          "required": true
        },
        "clientTitle": {
          "type": "text",
          "description": "Job title"
        },
        "company": {
          "type": "text",
          "required": true
        },
        "quote": {
          "type": "richText",
          "required": true,
          "description": "Testimonial content"
        },
        "photo": {
          "type": "image",
          "description": "Client headshot"
        },
        "companyLogo": {
          "type": "image",
          "description": "Company logo"
        },
        "rating": {
          "type": "number",
          "min": 1,
          "max": 5,
          "description": "Star rating"
        },
        "projectType": {
          "type": "text",
          "description": "Type of work (Consulting, Implementation, etc.)"
        },
        "featured": {
          "type": "boolean",
          "default": false
        },
        "dateAdded": {
          "type": "date",
          "required": true
        }
      }
    }
  },
  "permissions": {
    "blogPosts": {
      "create": ["admin", "editor"],
      "read": ["anyone"],
      "update": ["admin", "editor"],
      "delete": ["admin"]
    },
    "caseStudies": {
      "create": ["admin"],
      "read": ["anyone"],
      "update": ["admin"],
      "delete": ["admin"]
    },
    "tools": {
      "create": ["admin"],
      "read": ["anyone"],
      "update": ["admin"],
      "delete": ["admin"]
    }
  }
}