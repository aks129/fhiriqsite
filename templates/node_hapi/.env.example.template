# {{APP_NAME}} Environment Configuration
# Copy this file to .env and customize for your environment

# Application Configuration
NODE_ENV=development
PORT=8080
HOST=localhost

# FHIR Server Configuration
FHIR_SERVER_URL={{FHIR_SERVER_URL}}
FHIR_SERVER_AUTH_TYPE=none
# FHIR_SERVER_TOKEN=your-bearer-token-here
# FHIR_SERVER_USERNAME=username
# FHIR_SERVER_PASSWORD=password

# Authentication Configuration (for OAuth/SMART on FHIR)
# OAUTH_CLIENT_ID=your-client-id
# OAUTH_CLIENT_SECRET=your-client-secret
# OAUTH_AUTHORIZATION_URL=https://your-auth-server/auth
# OAUTH_TOKEN_URL=https://your-auth-server/token
# OAUTH_SCOPE=patient/*.read user/*.read
# OAUTH_REDIRECT_URI=http://localhost:8080/auth/callback

# CORS Configuration
CORS_ORIGIN=http://localhost:3000
# CORS_ORIGIN=http://localhost:3000,https://yourdomain.com

# Logging Configuration
LOG_LEVEL=INFO
# LOG_LEVEL=DEBUG,INFO,WARN,ERROR

# Security Configuration
SESSION_SECRET=your-session-secret-here-change-in-production
# API_KEY=your-api-key-for-protected-endpoints

# Database Configuration (if using local database)
# DATABASE_URL=postgresql://username:password@localhost:5432/fhir_app
# REDIS_URL=redis://localhost:6379

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Monitoring and Analytics
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
# NEW_RELIC_LICENSE_KEY=your-new-relic-license-key

# Feature Flags
ENABLE_SUBSCRIPTIONS=false
ENABLE_BULK_OPERATIONS=false
ENABLE_VALIDATION=true
ENABLE_CACHING=false

# Performance Tuning
REQUEST_TIMEOUT=30000
MAX_REQUEST_SIZE=10mb
KEEPALIVE_TIMEOUT=5000

# Development Only
# MOCK_FHIR_SERVER=true
# ENABLE_DEBUG_ROUTES=true